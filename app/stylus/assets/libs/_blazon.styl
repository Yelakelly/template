.blazon
    opacity 0
    position fixed
    font-family "Magistral", sans-serif
    z-index 9999
    left 0
    top -100%
    width 100%
    padding 20px
    background rgb(38, 54, 65)
    color #fff
    box-shadow 0px 0px 15px rgba(0, 0, 0, 0.4)
    text-align center
    -webkit-transition all 0.5s ease
    -moz-transition all 0.5s ease
    -o-transition all 0.5s ease
    transition all 0.5s ease
    &.is-active
        opacity 1

.blazon--top
    top -105px
    &.is-active
        top 0px
        .blazon__text
            opacity 1
            bottom 0px
    .blazon__text
        bottom -100px

.blazon--bottom
    bottom -105px
    top auto
    &.is-active
        bottom 0px
        .blazon__text
            opacity 1
            top 0px
    .blazon__text
        top -100px

.blazon__text
    opacity 0
    position relative
    -webkit-transition all 0.4s ease
    -moz-transition all 0.4s ease
    -o-transition all 0.4s ease
    transition all 0.4s ease
    font-size 20px

.blazon--corner-left
    max-width 300px
    left 0px

.blazon--corner-right
    max-width 300px
    right 0px
    left auto